#include <stdio.h>
#include <stdlib.h>

/*
 Ask user for input until count reaches 50 or input is -999.
 Output user input
 */

#define DAYS 5

int main(int argc, const char * argv[]) {
    double array[DAYS] = {0.0}; // initialize array of 5 integers to 0
    double average; //
    int i = 0, num = 0, total = 0;
    
    for (i = 0; i < DAYS && num != -999; i++){ //
        printf("Enter a number %i, Limit 50 (-999 to quit)\n", i + 1);
        scanf("%lf", &array[i]);
        
        num = array[i];
        
    }
    
    for (i = 0; i < DAYS && num != -999; i++){
        // total = total + array[i];
        total += array[i];
    }
    
    average = total / DAYS;
    
    printf("The total is %d \n", total);
    printf("The average is %.2lf \n", average);
    return 0;
}
